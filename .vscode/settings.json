{
    //"python.defaultInterpreterPath": "${env:HOME}/Library/Caches/pypoetry/virtualenvs/transformer-implementations-urBBcPaT-py3.11",
    "autoDocstring.docstringFormat": "pep257",
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "editor.rulers": [
        {
            "column": 120,
            "color": "#ffcc00"
        }
    ],    
    "notebook.cellToolbarVisibility": "hover",
    "jupyter.themeMatplotlibPlots": true,
    "jupyter.debugJustMyCode": true,    
    // formatting
    "notebook.formatOnSave.enabled": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "ruff.enable": true,        
}